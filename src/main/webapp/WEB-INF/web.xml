<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>Tapestry 5 jqPlot heroku</display-name>
	<context-param>
		<!--
			The only significant configuration for Tapestry 5, this informs
			Tapestry of where to look for pages, components and mixins.
		-->
		<param-name>tapestry.app-package</param-name>
		<param-value>org.got5.tapestry5.jquery.jqplot.heroku</param-value>
	</context-param>
	<filter>
		<filter-name>Heroku</filter-name>
		<filter-class>org.apache.tapestry5.TapestryFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Heroku</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
      
